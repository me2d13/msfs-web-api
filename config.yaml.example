# Example configuration file for MSFS Web API Server
# Place this file next to MsfsApiServer.exe or specify with --config parameter

general:
  # Log file path (optional)
  # If not specified, defaults to MsfsApiServer.log next to the executable
  logFile: "MsfsApiServer.log"

webApi:
  # Port for the web server (optional)
  # Default: 5018
  port: 5018

udp:
  # Enable UDP streaming (optional)
  # Default: false (UDP streaming disabled)
  # Set to true to enable UDP output
  enabled: false
  
  # UDP streaming configuration (only used when enabled: true)
  # Target host for UDP output
  targetHost: "192.168.1.100"
  
  # Target port for UDP output
  targetPort: 49002
  
  # Update interval in milliseconds
  # Default: 100ms
  interval: 100
  
  # List of SimVar names to stream via UDP
  # Each variable will be queried and sent at the specified interval
  variables:
    - "PLANE ALTITUDE"
    - "AIRSPEED INDICATED"
    - "HEADING INDICATOR"
    - "VERTICAL SPEED"

serial:
  # Enable Serial port streaming (optional)
  # Default: false (serial streaming disabled)
  # Set to true to enable serial output
  enabled: false

  # Serial port name (required when enabled)
  # Windows: "COM3", "COM4", etc.
  comPort: "COM3"

  # Baud rate (default: 9600)
  # Common values: 4800, 9600, 19200, 38400, 57600, 115200
  baudRate: 115200

  # Parity (default: None)
  # Options: None, Odd, Even, Mark, Space
  parity: "None"

  # Data bits (default: 8)
  # Options: 5, 6, 7, 8
  dataBits: 8

  # Stop bits (default: One)
  # Options: One, OnePointFive, Two
  stopBits: "One"

  # Handshake / flow control (default: None)
  # Options: None, XOnXOff, RequestToSend, RequestToSendXOnXOff
  handshake: "None"

  # Update interval in milliseconds
  # Default: 1000ms
  interval: 200

  # List of SimVar names to stream via serial port
  # Each variable will be queried and sent at the specified interval
  # Use "VAR NAME|alias" to send under a custom key name
  variables:
    - "PLANE ALTITUDE|altitude"
    - "AIRSPEED INDICATED|airspeed"
    - "HEADING INDICATOR|heading"
    - "VERTICAL SPEED|verticalSpeed"
